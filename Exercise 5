--using colonialDB
--USING PARTITION FUNCTION AND SCHEMES

--QUESTION1 
CREATE PARTITION FUNCTION [Price](decimal) AS RANGE RIGHT FOR VALUES (
'20',
'50',
'100');
GO

--QUESTION2
CREATE PARTITION SCHEME [mappingPrice] AS PARTITION Price
ALL TO ([PRIMARY]);
GO

--QUESTION 3

SELECT * 
FROM RESERVATION r
INNER JOIN PARTITIONS p
ON r.RESERVATION_ID = p.partition_number
WHERE $PARTITION.[tripPrice] (TRIP_PRICE) = ('20','50','100');
